<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pet_info_fragment"
    tools:context=".PetInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#001419">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pet_info_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_littledog3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pet_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="10dp"
            android:text=" Name:"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pet_info_name_value"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_picture" />
        <TextView
            android:id="@+id/pet_info_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:text="pet name"
            android:maxLines="20"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pet_info_name"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_picture" />

        <TextView
            android:id="@+id/pet_info_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="10dp"
            android:text=" Breed:"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pet_info_breed_value"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_name" />
        <TextView
            android:id="@+id/pet_info_breed_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:text="dog breed"
            android:maxLines="20"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pet_info_breed"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_name" />

        <TextView
            android:id="@+id/pet_info_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="10dp"
            android:text=" Weight:"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pet_info_weight_value"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_breed" />
        <TextView
            android:id="@+id/pet_info_weight_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:text="10 kg"
            android:maxLines="20"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pet_info_weight"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_breed" />

        <TextView
            android:id="@+id/pet_info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="10dp"
            android:text=" Description:"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/pet_info_description_value"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_weight" />
        <TextView
            android:id="@+id/pet_info_description_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:text="description"
            android:maxLines="20"
            android:minLines="2"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pet_info_description"
            app:layout_constraintTop_toBottomOf="@+id/pet_info_weight" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>